.exhibitionPage
  .header
    = link_to image_tag("logo.png", alt: "exhibition_logo", class: "exhibition_logo"), "#"
  .exhibitionPage__main
    .exhibitionPage__main__contents
      = form_with model: @item, local: true do |f|
        .exhibitionPage__main__contents__image
          .exhibitionPage__main__contents__image__title
            %label.sab-title 出品画像
            %span.required 必須
          .exhibitionPage__main__contents__image__explanation#image-box
            %p 最大10枚までアップロードできます
            = f.fields_for :images do |i|
              = f.label :src, class: 'form-image' do
                .exhibitionPage__main__contents__image__texts__text.js-file_group{data: {index: "image.index"}}
                  -# = f.file_field :src, class: 'js-file'
                  %span.js-remove 削除
                  .exhibitionPage__main__contents__image__texts__text__icon
                    = icon('fas', 'camera fa-2x', class: 'icon')
                  .exhibitionPage__main__contents__image__texts__text__instruction
                    %center クリックしてファイルをアップロード
        .exhibitionPage__main__contents__product
          .exhibitionPage__main__contents__product__name-box
            .exhibitionPage__main__contents__product__name-box__name
              %label.sab-title 商品名
              %span.required 必須
            .exhibitionPage__main__contents__product__name-box__text
              = f.text_field :name, class: 'name__text', placeholder: '40文字まで'
          .exhibitionPage__main__contents__product__explanation-box
            .exhibitionPage__main__contents__product__explanation-box__explanation
              %label.sab-title 商品の説明
              %span.required 必須
            .exhibitionPage__main__contents__product__explanation-box__text
              -# = f.text_area :explain, class: 'explanation__text', placeholder: '商品の説明（必須1,000文字以内）&#13;&#10;（色、素材、重さ、定価、注意点など）&#13;&#10;&#13;&#10;例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。合わせてやすいのでオススメです！'.html_safe 
        .exhibitionPage__main__contents__detail
          .exhibitionPage__main__contents__detail__title
            %h1 商品の詳細
          .exhibitionPage__main__contents__detail__category
            .exhibitionPage__main__contents__detail__category__title
              %label.sab-title カテゴリー
              %span.required 必須
            .exhibitionPage__main__contents__detail__category__choose
              -# %select{:name => "category"}
                %option{:value => ""} 選択してください
                %option{:value => "1"} レディース
                %option{:value => "2"} メンズ
                %option{:value => "3"} ベビー・キッズ
                %option{:value => "4"} インテリア・住まい・小物
                %option{:value => "5"} 本・音楽・ゲーム
                %option{:value => "6"} おもちゃ・ホビー・グッズ
                %option{:value => "7"} コスメ・香水・美容
                %option{:value => "8"} 家電・スマホ・カメラ
                %option{:value => "9"} スポーツ・レジャー
                %option{:value => "10"} ハンドメイド
                %option{:value => "11"} チケット
                %option{:value => "12"} 自動車・オートバイ
                %option{:value => "13"} その他    
          .exhibitionPage__main__contents__detail__brand
            .exhibitionPage__main__contents__detail__brand__title
              %label.sab-title ブランド
              %span 任意
            .exhibitionPage__main__contents__detail__brand__text
              -# = f.text_field :content, class: 'brand_text', placeholder: '例）ユニクロ'
          .exhibitionPage__main__contents__detail__condition
            .exhibitionPage__main__contents__detail__condition__title
              %label.sab-title 商品の状態
              %span.required 必須
            .exhibitionPage__main__contents__detail__condition__choose
              -# %select{:name => "condition"}
                %option{:value => ""} 選択してください
                %option{:value => "1"} 新品、未使用
                %option{:value => "2"} 未使用に近い
                %option{:value => "3"} 目立った傷や汚れなし
                %option{:value => "4"} やや傷や汚れあり
                %option{:value => "5"} 傷や汚れあり
                %option{:value => "6"} 全体的に状態が悪い
        .exhibition__delivery
          .exhibition__delivery__title
            配送について
          .exhibition__delivery__charges
            .exhibition__delivery__charges__top
              配送料の負担
              %span 必須
            .exhibition__delivery__charges__bottom
              %select.changes
                %option 選択してください
                %option 送料込み (出品者負担)
                %option 着払い (購入者負担)
          .exhibition__delivery__area
            .exhibition__delivery__area__top
              発送元の地域
              %span 必須
            .exhibition__delivery__area__bottom
              %select.changes
                %option 選択してください
                %option 北海道
                %option 青森県
                %option 岩手県
                %option 宮城県
                %option 秋田県
                %option 山形県
                %option 福島県
                %option 茨城県
                %option 栃木県
                %option 群馬県
                %option 埼玉県
                %option 千葉県
                %option 東京都
                %option 神奈川県
                %option 新潟県
                %option 富山県
                %option 石川県
                %option 福井県
                %option 山梨県
                %option 長野県
                %option 岐阜県
                %option 静岡県
                %option 愛知県
                %option 三重県
                %option 滋賀県
                %option 京都府
                %option 大阪府
                %option 兵庫県
                %option 奈良県
                %option 和歌山県
                %option 鳥取県
                %option 島根県
                %option 岡山県
                %option 広島県
                %option 山口県
                %option 徳島県
                %option 香川県
                %option 愛媛県
                %option 高知県
                %option 福岡県
                %option 佐賀県
                %option 長崎県
                %option 熊本県
                %option 大分県
                %option 宮崎県
                %option 鹿児島県
                %option 沖縄県
                %option 未定
          .exhibition__delivery__date
            .exhibition__delivery__date__top
              発送までの日数
              %span 必須
            .exhibition__delivery__date__bottom
              %select.changes
                %option 選択してください
                %option 1~2日で発送
                %option 2~3日で発送
                %option 4~7日で発送
        .exhibition__price
          .exhibition__price__range
            価格（¥300〜9,999,999)
          .exhibition__price__info
            .exhibition__price__info__value
              販売価格
              %span.tag 必須
              %span.mark ¥
              -# %input{autocomplete: "off",name: "price",placeholder: "0",type: "number",value: ""}
            .exhibition__price__info__fee
              販売手数料（10%）
              %span -
            .exhibition__price__info__half-way
              -
            .exhibition__price__info__profit
              販売利益
              %span -
          
          .exhibition__price__selection
            =f.submit value: '投稿する', class: 'exhibition__price__selection.finish'
            %button.saving 下書きに保存
            =link_to "もどる","#"
          .exhibition__price__rules
            禁止されている
            =link_to "行為","#"
            および
            =link_to "出品物","#"
            を必ずご確認ください。
            =link_to "偽ブランド品", "#"
            や
            =link_to "盗品物","#"
            などの販売は犯罪であり、法律により処罰される可能性があります。
            また、出品をもちまして
            =link_to "加盟店規約","#"
            に同意したことになります。
  .footer1
    .footer1__inner
      %nav.footer1__inner__nav
        %ul.footer1__inner__nav__category
          %li
            = link_to "プライバシーポリシー", "#", class: "privacyPolicy"
          %li
            = link_to "フリマ利用規約", "#", class: "terms"
          %li
            = link_to "特定商取引に関する表記", "#", class: "notation"
      = link_to image_tag("logo-white.png", alt: "login_logo", class: "login_logo"), root_path
      %p
        %small
          &copy Furima, Inc.