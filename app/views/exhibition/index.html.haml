.exhibitionPage
  .header
    = link_to image_tag("logo.png", alt: "exhibition_logo", class: "exhibition_logo"), "#"
  .exhibitionPage__main
    .exhibitionPage__main__contens
      = form_for ("") do |f|
        .exhibitionPage__main__contens__image
          .exhibitionPage__main__contens__image__title
            %label.sab-title 出品画像
            %span.required 必須
          .exhibitionPage__main__contens__image__explanation
            %p 最大10枚までアップロードできます
          .exhibitionPage__main__contens__image__texts
            = f.label :image, class: 'form__mask__image' do
              = f.file_field :image, class: 'hidden'
              .exhibitionPage__main__contens__image__texts__text
                .exhibitionPage__main__contens__image__texts__text__icon
                  = icon('fas', 'camera fa-2x', class: 'icon')
                .exhibitionPage__main__contens__image__texts__text__instruction
                  %center ドラッグアンドドロップ
                  %center またはクリックしてファイルをアップロード

        .exhibitionPage__main__contens__product
          .exhibitionPage__main__contens__product__name-box
            .exhibitionPage__main__contens__product__name-box__name
              %label.sab-title 商品名
              %span.required 必須
            .exhibitionPage__main__contens__product__name-box__text
              = f.text_field :content, class: 'name__text', placeholder: '40文字まで'
          .exhibitionPage__main__contens__product__explanation-box
            .exhibitionPage__main__contens__product__explanation-box__explanation
              %label.sab-title 商品の説明
              %span.required 必須
            .exhibitionPage__main__contens__product__explanation-box__text
              = f.text_area :content, class: 'explanation__text', placeholder: '商品の説明（必須1,000文字以内）&#13;&#10;（色、素材、重さ、定価、注意点など）&#13;&#10;&#13;&#10;例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。合わせてやすいのでオススメです！'.html_safe 

        .exhibitionPage__main__contens__detail
          .exhibitionPage__main__contens__detail__title
            %h1 商品の詳細
          .exhibitionPage__main__contens__detail__category
            .exhibitionPage__main__contens__detail__category__title
              %label.sab-title カテゴリー
              %span.required 必須
            .exhibitionPage__main__contens__detail__category__choose
              %select{:name => "category"}
                %option{:value => ""} 選択してください
                %option{:value => "1"} レディース
                %option{:value => "2"} メンズ
                %option{:value => "3"} ベビー・キッズ
                %option{:value => "4"} インテリア・住まい・小物
                %option{:value => "5"} 本・音楽・ゲーム
                %option{:value => "6"} おもちゃ・ホビー・グッズ
                %option{:value => "7"} コスメ・香水・美容
                %option{:value => "8"} 家電・スマホ・カメラ
                %option{:value => "9"} スポーツ・レジャー
                %option{:value => "10"} ハンドメイド
                %option{:value => "11"} チケット
                %option{:value => "12"} 自動車・オートバイ
                %option{:value => "13"} その他
          .exhibitionPage__main__contens__detail__brand
            .exhibitionPage__main__contens__detail__brand__title
              %label.sab-title ブランド
              %span 任意
            .exhibitionPage__main__contens__detail__brand__text
              = f.text_field :content, class: 'brand_text', placeholder: '例）ユニクロ'
          .exhibitionPage__main__contens__detail__condition
            .exhibitionPage__main__contens__detail__condition__title
              %label.sab-title 商品の状態
              %span.required 必須
            .exhibitionPage__main__contens__detail__condition__choose
              %select{:name => "condition"}
                %option{:value => ""} 選択してください
                %option{:value => "1"} 新品、未使用
                %option{:value => "2"} 未使用に近い
                %option{:value => "3"} 目立った傷や汚れなし
                %option{:value => "4"} やや傷や汚れあり
                %option{:value => "5"} 傷や汚れあり
                %option{:value => "6"} 全体的に状態が悪い