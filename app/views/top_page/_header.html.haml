.header
  .header__interior
    .header__interior__main
      .header__interior__main__icon
        %href.tag
          = image_tag asset_path("logo/logo.png"), size: "150x45"
      .header__interior__main__search-box
        = form_for ("") do |f|
          = f.text_field :content, class: 'form__search', placeholder: 'キーワードから探す'
        .header__interior__main__search-box__icon
          %href.icon
            = image_tag asset_path("icon/icon-search 1.png"), size: "25x25"
    .header__interior__nav
      .header__interior__nav__left
        .header__interior__nav__left__categorie
          = link_to('カテゴリー', root_path)
        .header__interior__nav__left__brand
          = link_to('ブランド', root_path)
      .header__interior__nav__right
        - unless user_signed_in?
          .header__interior__nav__right__login
            = link_to('ログイン', new_user_session_path)
          .header__interior__nav__right__new
          = link_to('新規会員登録', users_home_path)
        - else
          .header__interior__nav__right__logout
            = link_to('ログアウト', destroy_user_session_path, method: :delete)
